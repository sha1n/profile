set background=dark
colorscheme industry

syntax enable

" show line numbers
" set number
" highlight cursor line
set cursorline

" searchi
" search as you type
set incsearch
" highlight matches
set hlsearch

set foldenable

" tab size
set tabstop=2
" tab size for editing
set softtabstop=2
" use spaces to represent tabs
set expandtab

set autoindent
