set nocompatible
set termguicolors
set background=dark
colorscheme solarized

syntax enable

" show line numbers
@REM set number
" highlight cursor line
@REM set cursorline

" searchi
" search as you type
set incsearch
" highlight matches
set hlsearch

set foldenable

" tab size
set tabstop=2
" tab size for editing
set softtabstop=2
" use spaces to represent tabs <-- bad for Makefile
" set expandtab

set autoindent
set autoread
